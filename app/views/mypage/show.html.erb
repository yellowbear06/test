<% content_for(:title, t('.title')) %>
<div class="body-container d-flex">
  <div class="profile">
    <%= image_tag current_user.avatar.url, class: 'rounded-circle d-inline', size: '150x150' %>
    <h1 class="d-inline"><%= current_user.name %></h1>
    <table class="table">
      <tr>
        <th scope="row"><%= t(User.human_attribute_name(:email)) %></th>
        <td><%= current_user.email %></td>
      </tr>
      <tr>
        <th scope="row"><%= t(User.human_attribute_name(:address)) %></th>
        <td><%= current_user.address %></td>
      </tr>
      <tr>
        <th scope="row"><%= t(VegetarianType.human_attribute_name(:name)) %></th>
        <td><%= current_user.vegetarian_type_id %></td>
      </tr>
      <tr>
        <th scope="row"><%= t(User.human_attribute_name(:profile)) %></th>
        <td><%= current_user.profile %></td>
      </tr>
    </table>
    <%= link_to t('defaults.edit'), edit_mypage_path(current_user) %>
  </div>
  <div class="mylists">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">Handle</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td>Mark</td>
          <td>Otto</td>
          <td>@mdo</td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>Jacob</td>
          <td>Thornton</td>
          <td>@fat</td>
        </tr>
        <tr>
          <th scope="row">3</th>
          <td colspan="2">Larry the Bird</td>
          <td>@twitter</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
