<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <% @user_lists.each do |list| %>
        <form class="row g-3 align-items-center">
          <%= form_with(model: list, url: user_lists_path) do |f| %>
            <div class="col-auto">
              <%= f.label :list_name %>
              <%= f.text_field :list_name, class: 'form-control mb-3' %>
            </div>
          
            <div class="col-auto">
              <%= f.label :description %>
              <%= f.text_field :description, class: 'form-control mb-3' %>
            </div>
          
            <div class="col-auto">
              <%= link_to user_list_path(list), data: { turbo_method: :delete, turbo_confirm: t('defaults.message.delete_confirm')} do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </div>
          <% end %>
        </form>
      <% end %>
    </div>
  </div>
</div>