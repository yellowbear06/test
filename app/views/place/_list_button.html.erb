<% current_user.user_lists.each_with_index do |list, index| %>
  <% case index %>
    <% when 0 %>
      <% icon_name = "heart" %>
    <% when 1 %>
      <% icon_name = "bookmark" %>
    <% when 2 %>
      <% icon_name = "check-circle" %>
    <% else %>
      <% icon_name = "star" %>
  <% end %>
    <% if place.listed_by?(list) %>
      <%= link_to place_list_places_path(place_id: place.id, user_list_id: list.id, icon_name: icon_name ), id: "place-#{place.id}-#{list.id}", data: { turbo_method: :delete} do %>
        <i class="bi <%= "bi-#{icon_name}-fill" %>"></i>
        <%= list.list_name %>
      <% end %>
    <% else %>
      <%= link_to place_list_places_path(place_id: place.id, user_list_id: list.id, icon_name: icon_name ), id: "place-#{place.id}-#{list.id}", data: { turbo_method: :post} do %>
        <i class="bi <%= "bi-#{icon_name}" %>"></i>
        <%= list.list_name %>
      <% end %>
    <% end %>
<% end %>